@model IEnumerable<Crud.Models.Course>

<h1>
    course index
</h1>
<a class="btn btn-dark btn-lg" asp-action="Create">
    <i class="bi bi-plus-circle"></i>
    Add Course
</a>
@* ======================================================================= *@



<br><br/>
@if (!Model.Any())
{
    <div class="alert  alert-secondary d-inline-block">
        <h3>No Courses</h3>
        <p class="mb-0"> There is no Courses were added here</p>
    </div>
}
else
{
   <div class="mt-5">
       <table class="table">
           <tbody>
               @foreach ( var course in Model)
                {
                    <tr class="border-1">
                        <td>
                            <div class="d-flex gap-1">
                                <div class="pe-4">
                                    <img src="@($"{FileSettings.ImagesPath}/{course.Cover}")" alt="@course.Title" style="width:100px; height:100px;" />
                                </div>
                                <div class="d-flex flex-column justify-content-center ">
                                    <h4 class="text-white ">@course.Title</h4>
                                    <h5>
                                        @foreach (var courseinstructor in course.CourseInstructor)
                                        {
                                            <span class="badge bg-dark rounded-0 fs-6 me-1 mb-1">
                                                @courseinstructor.Instructor.Name
                                            </span>
                                        }
                                    </h5>
                                </div>
                            </div>
                        </td>
                        <td class="align-middle text-center" style="width: 250px;">
                            <div class="d-flex justify-content-end">
                                <a class="btn btn-dark" asp-action="Edit" asp-route-id="@course.Id">
                                    <i class="bi bi-pencil-square"></i>
                                    Edit
                                </a>
                                <a class="btn btn-danger js-delete" data-Id="@course.Id">
                                    <i class="bi bi-trash3-fill"></i>
                                    Delete
                                </a>
                            </div>
                    </tr>
                }
            </tbody>
       </table>
   </div>
}


@section scripts
{
    <script src="~/js/course-delete.js"></script>
}