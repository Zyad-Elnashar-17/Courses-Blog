@model Course

@{
    ViewData["Title"] = Model.Title;
}

<div class="card border-secondary rounded-4 mt-5">
    <div class="card-body p-0">
        <div class="row">
            <div class="col-md-8 px-5 py-4 d-flex flex-column justify-content-between">
                <div class="d-flex flex-column h-100">
                    <div>
                        <h2 class="card-title fw-bold">@Model.Title</h2>
                        <h5 class="card-subtitle text-white-50 mt-2">Course Price : @Model.Price EGP</h5>
                        <div class="d-flex flex-wrap mb-4">
                            @foreach (var courseinstructor in Model.CourseInstructor)
                            {
                                <span class="badge bg-secondary rounded-0 fs-6 me-2">
                                    Instructor :  @courseinstructor.Instructor?.Name
                                </span>
                            }
                        </div>
                        <hr class="border-secondary mb-3" />

                        <p class="card-text mt-4 fs-5">
                            @Model.Description
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <img src="@($"{FileSettings.ImagesPath}/{Model.Cover}")" alt="@Model.Title" style="width:100%; height:400px;" />
            </div>

        </div>
    </div>
</div>