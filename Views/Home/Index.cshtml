@model IEnumerable<Crud.Models.Course>

@if (!Model.Any())
{
    <div class="alert  alert-secondary d-inline-block">
        <h3>No Courses</h3>
        <p class="mb-0"> There is no Courses were added here</p>
    </div>
}
else
{
    <div class="row mt-5">
        @foreach (var course in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <a asp-controller="Courses" asp-action="Details" asp-route-Id="@course.Id" class="card border-secondary text-white position-relative overflow-hidden" style="max-width: 20rem; height: 400px;">
                    <div class="card-body" style="position:absolute; top:0; left:0; width:100%; height:100%; background-size:cover; background-position:center; filter:brightness(80%); background-image:url(@($"{FileSettings.ImagesPath}/{course.Cover}"));">

                        <div class="position-absolute top-0 start-0 p-3 d-flex flex-wrap">
                            @foreach (var courseinstructor in course.CourseInstructor)
                            {
                                <span class="badge bg-dark rounded-0 fs-6 me-1 mb-1">
                                    @courseinstructor.Instructor.Name
                                </span>
                            }
                        </div>

                        <div class="position-absolute bottom-0 start-0 d-flex justify-content-between align-items-center p-3 bg-dark w-100">
                            <h5 class="mb-0">@course.Title</h5>
                            <span class="text-white-50">@course.Price EGP</span>
                        </div>
                    </div>
                </a>
            </div>
        }

    </div>
}
